<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainAct">

    <!--헤더 영역-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/c_ff171717">

        <LinearLayout
            android:layout_width="@dimen/dp_47"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_16.5"
                android:layout_height="@dimen/dp_15.5"
                android:background="@drawable/main_icon_guide_50x46" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
        />

        <LinearLayout
            android:layout_width="@dimen/dp_47"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_16.5"
                android:layout_height="@dimen/dp_16"
                android:background="@drawable/main_icon_search_50x48" />
        </LinearLayout>
    </LinearLayout>

    <!--PagerSlidingTabStrip-->
    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/c_ff272727"  />

    <!--뷰페이져-->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />

</LinearLayout>