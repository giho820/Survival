<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffffff"
    android:orientation="vertical"
    tools:context="com.survivalsos.goldentime.activity.ArticleDetailAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/c_ff1C1C1C">

        <LinearLayout
            android:id="@+id/linearlayout_open_drawer_article_detail"
            android:layout_width="@dimen/dp_47"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_16.5"
                android:layout_height="@dimen/dp_15.5"
                android:background="@drawable/main_icon_guide_50x46" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></View>

        <LinearLayout
            android:id="@+id/linearlayout_bookmark_in_article_detail_act"
            android:layout_width="@dimen/dp_35"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_bookmark_detail_act"
                android:layout_width="@dimen/dp_16.5"
                android:layout_height="@dimen/dp_22"
                android:background="@drawable/sub_icon_bookmark_00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_search_in_article_detail_act"
            android:layout_width="@dimen/dp_47"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_16.5"
                android:layout_height="@dimen/dp_16"
                android:background="@drawable/main_icon_search_50x48" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewArticleDetail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/webView_article_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_20.5" />

            <LinearLayout
                android:id="@+id/speaker"
                android:layout_width="@dimen/dp_45.5"
                android:layout_height="@dimen/dp_45.5"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/speaker11"
                android:orientation="vertical"
                android:visibility="gone"></LinearLayout>

            <LinearLayout
                android:id="@+id/img_having_checklist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43.5"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/c_ffE4E4E4"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_43.5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_33.5"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_20.5"
                            android:background="@drawable/sub_icon_checkbox" />
                    </LinearLayout>

                    <com.survivalsos.goldentime.common.view.textview.NanumBarunGothicTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:text="체크리스트에 담기"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/dp_16"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


            <ListView
                android:id="@+id/article_detail_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#ffffff"
                android:dividerHeight="0dp"></ListView>


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/c_ffE4E4E4"></LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43.5"
        android:layout_gravity="bottom|center"
        android:background="@color/c_fff4f3f3">

        <LinearLayout
            android:id="@+id/linearlayout_icon_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_19.5"
                android:background="@drawable/sub_icon_home" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_icon_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_18"
                android:background="@drawable/sub_icon_back" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_icon_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_18.5"
                android:layout_height="@dimen/dp_14.5"
                android:background="@drawable/sub_icon_list" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_icon_top"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_18.5"
                android:layout_height="@dimen/dp_18"
                android:background="@drawable/sub_icon_top" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
