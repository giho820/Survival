<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_300"
    android:layout_height="match_parent"
    android:background="@drawable/guide_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_21.5"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_13.5"></View>

    <!-- 알림 -->
    <LinearLayout
        android:id="@+id/linearlayout_drawer_notificaiton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46.6"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_16.5"
                android:background="@drawable/guide_icon_notice"/>
        </LinearLayout>
        
        <com.survivalsos.goldentime.common.view.textview.NanumBarunGothicTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림"
            android:textColor="@color/c_ffffffff"
            android:textStyle="bold"
            android:textSize="@dimen/dp_17"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:background="@color/c_ff9090A1"></LinearLayout>

    <!-- 저작권 공지 -->
    <LinearLayout
        android:id="@+id/linearlayout_drawer_copyright"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46.6"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_14.5"
                android:layout_height="@dimen/dp_16.5"
                android:background="@drawable/guide_icon_copyright"/>
        </LinearLayout>

        <com.survivalsos.goldentime.common.view.textview.NanumBarunGothicTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저작권 공지"
            android:textColor="@color/c_ffffffff"
            android:textStyle="bold"
            android:textSize="@dimen/dp_17"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:background="@color/c_ff9090A1"></LinearLayout>

    <!-- Contact -->
    <LinearLayout
        android:id="@+id/linearlayout_drawer_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46.6"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_17.5"
                android:layout_height="@dimen/dp_13.5"
                android:background="@drawable/guide_icon_contact"/>
        </LinearLayout>

        <com.survivalsos.goldentime.common.view.textview.NanumBarunGothicTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textStyle="bold"
            android:textColor="@color/c_ffffffff"
            android:textSize="@dimen/dp_17"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:background="@color/c_ff9090A1"></LinearLayout>

    <!-- 다운로드 -->
    <LinearLayout
        android:id="@+id/linearlayout_drawer_download"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46.6"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_17.5"
                android:layout_height="@dimen/dp_16.5"
                android:background="@drawable/guide_icon_download"/>
        </LinearLayout>

        <com.survivalsos.goldentime.common.view.textview.NanumBarunGothicTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다운로드"
            android:textColor="@color/c_ffffffff"
            android:textStyle="bold"
            android:textSize="@dimen/dp_17"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:background="@color/c_ff9090A1"></LinearLayout>

    <!-- 북마크 -->
    <LinearLayout
        android:id="@+id/linearlayout_drawer_bookmark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46.6"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_18"
                android:background="@drawable/guide_icon_bookmark"/>
        </LinearLayout>

        <com.survivalsos.goldentime.common.view.textview.NanumBarunGothicTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="북마크"
            android:textColor="@color/c_ffffffff"
            android:textStyle="bold"
            android:textSize="@dimen/dp_17"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:background="@color/c_ff9090A1"></LinearLayout>

    <!-- 리뷰쓰기-->
    <LinearLayout
        android:id="@+id/linearlayout_drawer_review"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46.6"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_18.5"
                android:layout_height="@dimen/dp_19"
                android:background="@drawable/guide_icon_review"/>
        </LinearLayout>

        <com.survivalsos.goldentime.common.view.textview.NanumBarunGothicTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰쓰기"
            android:textColor="@color/c_ffffffff"
            android:textStyle="bold"
            android:textSize="@dimen/dp_17"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:background="@color/c_ff9090A1"></LinearLayout>


</LinearLayout>